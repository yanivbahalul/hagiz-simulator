{
  "name": "hagiz-simulator",
  "version": "1.0.0",
  "description": "Web-based quiz tool for Introduction to Computer Systems exam practice",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "docker:build": "docker build -t hagiz-simulator .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/images:/app/images hagiz-simulator",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": ["quiz", "education", "computer-systems", "exam-practice"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  }
}
